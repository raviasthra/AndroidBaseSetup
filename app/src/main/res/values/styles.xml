<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PrimaryButton" parent="Theme.MaterialComponents">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:color">@color/colorAccent</item>
        <!-- <item name="android:textSize">@dimen/size_26</item>
         <item name="android:padding">@dimen/spacing_extra_large</item>
         <item name="android:fontFamily">@font/poppins_bold</item>
         <item name="android:layout_marginTop">@dimen/spacing_extra_large</item>-->
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ThemeNavigation">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorSurface">@color/colorBlack</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="android:colorAccent">#673AB7</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorPrimary">#FF4F29</item>
    </style>

    <style name="FilledBoxEndIconTint" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>


</resources>